Questão 01-
programa{
funcao inicio(){
// Declaração de variáveis
real: lucro, poupanca, quant_paes, quant_broas;

// Declaração de constantes
constante real: 1pão= 0,32, 1broa = 1,50;

// Entrada de dados
escreva("Informe a quantidade de pães: ");
leia(quant_paes);

escreva("Informe a quantidade de broas: ");
leia(quant_broas);

// Processamento
lucro ← (quant_paes * 0,32) + (quant_broas * 1,50);
poupanca ← (10 / 100) * lucro;

// Saída de dados
escreva("O lucro foi de: ", lucro, " e a poupança foi de: ", poupanca);
   }

}

Questão 02-
programa {
funcao inicio (){
