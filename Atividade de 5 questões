Questão 03-
programa {
 funcao inicio() {
    //declaracao de variaveis
    real peso, valor_pago, valor_a_pagar, troco

    //declaracao de constante
    const real preco_por_rg = 12

    //entrada de dados
    escreva("digite o peso do prato em kg: ")
    leia(peso)
    escreva("digite o valor pago pelo cliente: ")
    leia(valor_pago)

    //processamento
    valor_a_pagar = peso * 12
    troco = valor_pago - valor_a_pagar

    //saida de dados
    escreva(" O valor a pagar:R$ ", valor_a_pagar, "\n")
    escreva("O troco é: R$", troco)
  }
}


Questão 04-
programa{
    funcao inicio() {
        // Declaração de variaveis
        inteiro dia, mes, dias_passados

        // Entrada de dados
        escreva("Informe o dia: ")
        leia(dia)

        escreva("Informe o mês: ")
        leia(mes)

        // Processamento
        dias_passados = (mes * 30) + dia

        // Saída de dados
        escreva("Já se passaram ", dias_passados, " dias desde o início do ano.")
    }
}

Questão 05-
programa {
  funcao inicio() {
    //declaracao de variaveis
    real quantidade_lata, quantidade_garrafa1, quantidade_garrafa2, total_litros

    //declaracao de constante
    const real lata = 0.35
    const real garrafa1 = 0.6
    const real garrafa2 = 2.0

    //entrada de dados
    escreva("Informe a quantidade comprada de latas:") 
    leia(quantidade_lata)
    escreva("Informe a quantidade comprada de garrafa de 350ml: ")
    leia(quantidade_garrafa1)
    escreva("Informe a quantidade comprada de garrafa de 600ml: ")
    leia(quantidade_garrafa2)

    //processamento
    total_litros = (quantidade_lata * 0.35) + (quantidade_garrafa1 * 0.6) + (quantidade_garrafa2 * 2.0)

    //saida de dados
    escreva("Total de litros que ele comprou é: ", total_litros, "litros")
  }
}
